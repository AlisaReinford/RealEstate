<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_type"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="property type" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_zip"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_type"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="zip code"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_bedroom"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_zip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_bedroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" number of bedroom"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_bath"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_bedroom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_bath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="number of bathroom"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_car"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_bath"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="number of parking lot"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>



        <RadioGroup
            android:id="@+id/rg_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_car"
            android:layout_alignStart="@id/til_car"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="on sale:"/>

            <RadioButton
                android:id="@+id/rb_sale_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes"/>

            <RadioButton
                android:id="@+id/rb_sale_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no"/>

        </RadioGroup>


        <RadioGroup
            android:id="@+id/rg_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_sale"
            android:layout_alignStart="@id/rg_sale"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="20sp"
                android:text="on rent:"/>

            <RadioButton
                android:id="@+id/rb_rent_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes"/>

            <RadioButton
                android:id="@+id/rb_rent_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no"/>

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_max_price"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_rent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="maximum price"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_min_price"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_max_price"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="minimum price"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_max_morgage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/til_min_price"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/et_max_morgage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="maximum morgage"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</ScrollView>